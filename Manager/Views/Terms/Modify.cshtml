@using Manager.Common
@model Manager.Models.Manage.TermsModifyModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="/SmartEditor/js/HuskyEZCreator.js" charset="utf-8"></script>
<script type="text/javascript" src="/JS/Editor.js"></script>
<script type="text/javascript" src="/js/manage/terms/terms.js?ver=@Func.GetNow()"></script>

<div class="tb_layout_1">
    <form name="form" method="post" action="/manage/terms/modify" autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" name="idx" value="@Model.Terms.idx" />
        <input type="hidden" name="page" value="@Model.Search.page" />
        <input type="hidden" name="searchtype" value="@Model.Search.searchtype" />
        <input type="hidden" name="keyword" value="@Model.Search.keyword" />

        <table>
            <colgroup>
                <col style="width: 150px;" />
                <col style="width: auto;" />
            </colgroup>
            <tbody>
                <tr>
                    <td class="title"><span>제목</span></td>
                    <td>
                        <span style="display:inline-block;"><input type="text" name="title" id="title" value="@Model.Terms.title" maxlength="200" class="input_text" style="width:500px" /></span>
                    </td>
                </tr>
                <tr>
                    <td class="title"><span>적용위치</span></td>
                    <td>
                        <span style="display:inline-block;"><input type="text" name="place" id="place" value="@Model.Terms.place" maxlength="200" class="input_text" style="width:500px" /></span>
                    </td>
                </tr>
                <tr>
                    <td class="title"><span>내용</span></td>
                    <td>
                        <span><textarea name="contents" id="contents" wrap="off" style="width:100%;height:250px;">@Model.Terms.contents</textarea></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

<div class="posR mt20 mb20">
    <div class="ac">
        @if (ViewBag.Permission.isWrite)
        {
            <a href="javascript:mod_Terms();" class="btn-c"><span>수정</span></a>
            <a href="javascript:del_Terms();" class="btn-c"><span>삭제</span></a>
        }
        <a href="javascript:moveList('/manage/terms/list');" class="btn-d"><span>목록</span></a>
    </div>
</div>

<script type="text/javascript">
    //에디터 로드
    var oEditors = [];
    nhn.husky.EZCreator.createInIFrame({
        oAppRef: oEditors,
        elPlaceHolder: "contents",
        sSkinURI: "/SmartEditor/SEditorSkin.html",
        fCreator: "createSEditorInIFrame",
        folderName: "terms"
    });
</script>